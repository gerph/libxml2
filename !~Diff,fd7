apply c.parserInternals
apply c.relaxng
apply c.SAX
apply c.SAX2
apply c.testAutomata
apply c.testC14N
apply c.testHTML
apply c.testReader
apply c.testRegexp
apply c.testRelax
apply c.testSAX
apply c.testSchemas
apply c.testThreads
apply c.testURI
apply c.testXPath
apply c.threads
apply c.tree
apply c.trio
apply c.trionan
apply c.triostr
apply c.uri
apply c.valid
apply c.xinclude
apply c.xlink
apply c.xmlcatalog
apply c.xmlIO
apply c.xmllint
apply c.xmlmemory
apply c.xmlreader
apply c.xmlregexp
apply c.xmlschemas
apply c.xmlschemastypes
apply c.xmlunicode
apply c.xmlwriter
apply c.xpath
apply c.xpointer
apply c.riscos
apply c.throwback

| Headers
apply h.acconfig
apply h.config
apply h.libxml
apply h.trio
apply h.triodef
apply h.trionan
apply h.triop
apply h.triostr
apply h.throwback

